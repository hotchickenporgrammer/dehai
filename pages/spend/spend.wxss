/* pages/spend/spend.wxss */
.container{
  
}
.top_title{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  display: flex;
  align-items: center;
  width:100%;
  height:87rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background:rgba(244,244,244,1);
}
.logo{
  height: 28rpx;
  width: 28rpx;
  padding-right: 20rpx;
}
.down{
  width:26rpx;
  height:28rpx;
  margin-left: auto;
  transition: all 300ms;
  transform-origin: 50% 50%;
}
.up{
  transform: rotate(180deg);
}
.shoplist{
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}
.item_left{
  flex: 0 0 80%;
}
.item_right{
  flex: 0 0 20%;
}
.shoplist{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.num{
  padding-bottom: 20rpx;
}
.item_right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.price{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(255,0,54,1);
}
.pl{
  padding-left: 15rpx;
}