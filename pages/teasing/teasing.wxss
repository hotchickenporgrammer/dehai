/* pages/teasing/teasing.wxss */
.container{
  box-sizing: border-box;
  padding: 20rpx;
}
.teas_title{
  padding: 20rpx 0 40rpx 0 ;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  text-align: center;
  }
  .content{
    width:710rpx;
    height:550rpx;
    border:1rpx solid rgba(189,189,189,1);
    border-radius:10rpx;
    box-sizing: border-box;
    padding: 15rpx
  }
  .text{
    height: 375rpx;
    width: 100%;
  }
  .pla{
    font-size:24rpx;
    font-family:MicrosoftYaHei;
    color:rgba(191,191,191,1);
  }
  .upfile{
    width:120rpx;
    height:120rpx;
    display: flex;
    flex-direction: column;
    /* text-align: center; */
    align-items: center;
    justify-content: space-evenly;
    font-size:22rpx;
    font-family:MicrosoftYaHei;
    color:rgba(149,149,149,1);
    border:1px dashed #BDBDBD;
    margin-left: 25rpx;
    position: relative;
  }
  .user_img{
    position: absolute;
    height: 100%;
    width: 100%;
  }
  .upimg{
    width:48rpx;
    height:40rpx;
    /* margin: 0 auto; */
  }
  .btn{
    margin-top: 50rpx;
    background: #0A9946;
    color: #fff;
    font-size: 30rpx;
  }
  .btn::after{
    border: none;
  }
  .help{
    font-size:22rpx;
    font-family:MicrosoftYaHei;
    color:rgba(121,121,121,1);
    padding: 60rpx 0;
    text-align: center;
  }
  .kefu{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
  }
  .dianhua{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size:22rpx;
    font-family:MicrosoftYaHei;
    color:rgba(121,121,121,1);
  }
  .dianhua image{
    height: 100rpx;
    width: 100rpx;
  }
  .dianhua .foo{
    padding: 15rpx 0 5rpx 0;
  }