/* pages/order/order.wxss */
.container{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.shop_item{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.item_top{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  display: flex;
  align-items: center;
}
.item_top image{
  height: 29rpx;
  width: 29rpx;
}
.item_top text{
  padding-left: 20rpx;
}
.is_shop{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 25rpx 0;
}
.shop_left{
  flex: 0 0 27%;
  display: flex;
  align-items: center;
}
.shop_left image{
  height: 170rpx;
  width: 170rpx;
}
.shop_right{
  flex: 0 0 83%;
  display: flex;
  flex-direction: column;
}
.shop_title{
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size:26rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  width: 520rpx;
  line-height: 33rpx;
}
.type_num{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 22rpx;
  width: 520rpx;
  padding: 20rpx 0;
}
.shop_money{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
    color:rgba(255,0,54,1);
    text-align: right;
    width: 520rpx;
}
.shop_info,.commission,.income{
  color:#333;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.info_time{
  padding-left: 15rpx;
}
.commission,.income{
  display: flex;
  flex-direction: column;

}