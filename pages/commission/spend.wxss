/* pages/spend/spend.wxss */
.container{
  
}
.top_title{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  display: flex;
  align-items: center;
  width:100%;
  height:87rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background:rgba(244,244,244,1);
}
.logo{
  height: 28rpx;
  width: 28rpx;
  padding-right: 20rpx;
}
.down{
  width:26rpx;
  height:28rpx;
  margin-left: auto;
  transition: all 300ms;
  transform-origin: 50% 50%;
}
.up{
  transform: rotate(180deg);
}
.shoplist{
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}
.item_left{
  flex: 0 0 70%;
}
.item_right{
  flex: 0 0 30%;
}
.shoplist{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.num{
  padding-bottom: 20rpx;
}
.item_right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.price{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(255,0,54,1);
}
.pl{
  padding-left: 15rpx;
}
.header_top{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 0 46rpx 0;
  display: flex;
  /* justify-content: center; */
  flex-direction: column;
  align-items: center;
}
.picker{
  width:317rpx;
  height:63rpx;
  border:1px solid #000000;
  border-radius:25px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.spend{
  padding-top: 30rpx;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.total{
  color: #FF0036;
}
.selectDate{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.selectDate image{
  width:33rpx;
  height:30rpx;
  padding-left: 26rpx;
}