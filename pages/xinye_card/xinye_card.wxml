<!--pages/cred/cred.wxml-->
<view class='container'>
  <van-steps steps="{{ steps }}" active="{{ active }}" custom-class='step_h' />
  <view class='item'>
    <text>加盟费：</text>
    <input type='text' placeholder=''></input>
  </view>
    <view class='item'>
    <text>进货费：</text>
    <input type='text' placeholder=''></input>
  </view>
    <view class='item'>
    <text>总汇款金额：</text>
    <input type='text' placeholder=''></input>
  </view>
    <view class='item'>
    <text>汇款银行：</text>
    <input type='text' placeholder='例：中国银行'></input>
  </view>
    <view class='item'>
    <text>汇款卡号：</text>
    <input type='text' placeholder='例：请输入银行卡号'></input>
  </view>
  <view class='upfile'>
    <text>上传汇款凭证：</text>
    <view class='toup'>
      <image src='{{user_img}}' wx:if="{{isshow}}" class='user_img'></image>
      <image src='/img/jia.png' class='upimg' bindtap='upfile' wx:if='{{!isshow}}'></image>
    </view>
  </view>
  <view class='warning'>文件仅支持：jpg、jpeg、png、pdf</view>
</view>
<view class='btn'>
  <button >下一步</button>
</view>