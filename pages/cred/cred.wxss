/* pages/cred/cred.wxss */
.container {
  box-sizing: border-box;
  padding: 0 20rpx;
}
.item{
  padding: 25rpx 0;
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  border-top: 1px solid #eee;
}
.item text{
  display: flex;
  align-items: center;
}
.item input{
  text-align: right;
  font-size:28rpx;
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx 20rpx;
  width: 100%;
  height:100rpx;

}
.btn button{
  height: 100%;
  width: 100%;
  background:rgba(10,153,70,1);
  border-radius:10rpx;
  color: #fff;
  font-size:30rpx;
}
.upfile{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  border-top: 1px solid #eee;
  padding-top: 25rpx; 
  display: flex;
  justify-content: flex-start;
}
.toup{
  width:195rpx;
  height:195rpx;
  border:1px dashed rgba(204,204,204,1);
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.toup image{
  height: 100%;
  width: 100%;
}
.toup .upimg{
  height: 60rpx;
  width: 60rpx;

}
.warning{
  font-size:22rpx;
  font-family:MicrosoftYaHei;
  color:rgba(153,153,153,1);
  padding: 10rpx 0;
}