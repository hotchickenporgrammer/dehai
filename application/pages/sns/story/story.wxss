.video-scroll{
  height: 488rpx;
  white-space: nowrap;
  width: 100%;
}


.video_item{
  padding-left: 20rpx;
  display:inline-block;
  /* display: flex; */
  /* flex-direction: row; */
}
.video_item:last-child{
  padding-right: 20rpx;
}
.video_title{
  width: 686rpx;
  height: 90rpx;
  line-height: 45rpx;
  /* white-space: pre-wrap; */
  white-space:pre-line;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* box-sizing: border-box; */
  padding-top: 30rpx;
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.video_img{
width:700rpx;
height:350rpx;
border-radius:8rpx;
position: relative;
margin-top: 20rpx;
}
.play{
position: absolute;
width: 100rpx;
height: 100rpx;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
}
.tab{
  box-sizing: border-box;
  padding: 10rpx 20rpx 0 20rpx; 
}
.tabs{
  padding-bottom: 40rpx;
}
.tab_item{
  padding: 20rpx 0;
}
.tab_video_item{
  height: 190rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
}
.tab_video_item:first-child{
  margin-top: 20rpx;
}
.left{
  width: 480rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.tab_video_title{
  font-size:32rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  box-sizing: border-box;
  padding-right: 0.5rpx;
}
.tab_video_info{
  margin-top: auto;
  font-size:20rpx;
  font-family:MicrosoftYaHei;
  color:rgba(154,154,154,1);
  display: flex;
  align-items: center;
}
.tab_video_info image{
  width:30rpx;
  height:24rpx;
}
.lookNum{
  padding: 0 19rpx 0 11rpx;
}
.right{
  width:230rpx;
  height:150rpx;
}
.right .right_img{
  height: 100%;
  width: 100%;
  position: relative;
}
.right .right_play{
  position: absolute;
  top: 50%;
  left: 50%;
  height: 50rpx;
  width: 50rpx;
  transform: translate(-50%, -50%);
}
