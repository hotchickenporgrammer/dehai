/* component/picker/picker.wxss */
.header_top{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 0 46rpx 0;
  display: flex;
  /* justify-content: center; */
  flex-direction: column;
  align-items: center;
}
.picker{
  width:317rpx;
  height:63rpx;
  border:1px solid #000000;
  border-radius:25px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.spend{
  padding-top: 30rpx;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.total{
  color: #FF0036;
}
.selectDate{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size:30rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}
.selectDate image{
  width:33rpx;
  height:30rpx;
  padding-left: 26rpx;
}